<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <item android:state_checked="true">
        <layer-list>
            <item>
                <shape android:shape="oval">
                    <corners android:radius="1dp" />
                    <gradient android:angle="90" android:endColor="@color/black_translucent" android:startColor="@color/black" />
                    <size android:width="24dp" android:height="24dp" />
                </shape>
            </item>
            <item android:width="8dp" android:height="2dp" android:left="3dp" android:top="14dp">
                <rotate android:fromDegrees="45">
                    <shape android:shape="rectangle">
                        <solid android:color="@color/gold" />
                    </shape>
                </rotate>
            </item>

            <item android:width="16dp" android:height="2dp" android:left="7dp" android:top="12dp">
                <rotate android:fromDegrees="-45">
                    <shape android:shape="rectangle">
                        <solid android:color="@color/gold" />
                    </shape>
                </rotate>
            </item>
        </layer-list>
    </item>

</selector>